<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="gridPane" prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="TourProject.Model.CustomDialog.DialogController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <BorderPane
                style="-fx-border-color: #dddddd; -fx-background-color: #e2e2e2; -fx-border-width: 3px; -fx-border-style: hidden hidden hidden solid;"
                GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1">
            <top>
                <ImageView fitHeight="120" fitWidth="120" pickOnBounds="true" preserveRatio="true"
                           BorderPane.alignment="CENTER">
                    <Image url="file:@../../resources/warning.png"/>
                </ImageView>
            </top>
        </BorderPane>
        <GridPane style="-fx-background-color: #f1f1f1" GridPane.columnIndex="1" GridPane.columnSpan="2"
                  GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="errorMessage" text="Label" textAlignment="JUSTIFY" wrapText="true"
                       GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                      GridPane.valignment="CENTER">
                    <children>
                        <Button fx:id="button" mnemonicParsing="false" onAction="#handleButtonPress" prefWidth="100.0"
                                style="-fx-background-color: darkgreen;" text="Okay" textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <ProgressIndicator fx:id="progress">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </ProgressIndicator>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </children>
</GridPane>
