<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Datum und Uhrzeit des Tourlogs Ã¤ndern">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <FlowPane>
            <children>
                <VBox>
                    <children>
                        <Label text="Datum"/>
                        <DatePicker fx:id="tourLogDatum"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Uhrzeit"/>
                        <ComboBox fx:id="tourLogUhrzeit" prefWidth="150.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </FlowPane>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#save"
                    style="-fx-background-color: #5cb85c; -fx-border-color: #398439;" text="Speichern" textFill="WHITE">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <ProgressIndicator fx:id="progress" visible="false"/>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel"
                    style="-fx-background-color: #d9534f; -fx-border-color: #d43f3a;" text="Abbrechen" textFill="WHITE">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </children>
</VBox>
