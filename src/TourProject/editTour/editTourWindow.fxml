<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="400.0" prefWidth="500" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TourProject.editTour.EditTourController">
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <Label layoutX="20.0" layoutY="60.0" text="Tour-Name" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tourName" promptText="Tour-Name eintragen">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <Label layoutX="20.0" layoutY="270.0" text="Tour-Beschreibung" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="tourDescription" prefHeight="200.0" prefWidth="200.0" promptText="Tour-Beschreibung eintragen">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextArea>
      <Label text="Strecke - ACHTUNG: Beides leer lassen, wenn es nicht geÃ¤ndert werden soll" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="startpunkt" promptText="Startpunkt (Adresse) ">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="endpunkt" layoutX="20.0" layoutY="270.0" promptText="Endpunkt (Adresse) ">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <Button mnemonicParsing="false" style="-fx-background-color: #5cb85c; -fx-border-color: #398439;" text="Speichern" textFill="WHITE" onAction="#save">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin></Button>
         <Button fx:id="cancelButton" mnemonicParsing="false" style="-fx-background-color: #d9534f; -fx-border-color: #d43f3a;" text="Abbrechen" textFill="WHITE" onAction="#cancel"/>
      </HBox>
   </VBox>
</GridPane>
